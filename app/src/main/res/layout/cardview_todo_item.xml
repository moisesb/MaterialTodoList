<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/todo_item_title"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Clean the window"/>

        <TextView
            android:id="@+id/todo_item_date"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todo_item_title"
            tools:text="12/12/2016 3:00pm"/>

        <TextView
            android:id="@+id/todo_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todo_item_date"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            tools:text="Lorem lipsum"/>

        <Button
            android:id="@+id/done_todo_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todo_item_description"
            android:layout_margin="8dp"
            android:text="@string/done_todo_item_text"
            android:textColor="?attr/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/delete_todo_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todo_item_description"
            android:layout_toRightOf="@+id/done_todo_item_button"
            android:layout_toEndOf="@+id/done_todo_item_button"
            android:layout_margin="8dp"
            android:text="@string/delete_todo_item_text"
            android:textColor="?attr/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>