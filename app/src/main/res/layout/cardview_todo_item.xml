<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="8dp"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/todo_item_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/todo_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/todo_item_stared"
            android:layout_alignRight="@+id/todo_item_stared"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/todo_item_done"
            android:layout_toRightOf="@+id/todo_item_done"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Clean the window"/>

        <ImageView
            android:id="@+id/todo_item_stared"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_star_border_black_24px"/>

        <TextView
            android:id="@+id/todo_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/todo_item_title"
            android:layout_alignStart="@+id/todo_item_title"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/todo_item_title"
            android:textColor="@color/red"
            android:textSize="12sp"
            tools:text="12/12/2016 3:00pm"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>